<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="Theme.Style2" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_style2</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Style2</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Style2</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Style2</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Style2</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Style2</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_style2</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_style2</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Style2</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Style2.Widget</item>


    </style>

    <style name="ActionBar.Solid.Style2" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#D9318A10</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_style2</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_style2</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Style2</item>
    </style>

    <style name="ActionBar.Transparent.Style2" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_style2</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Style2</item>
    </style>

    <style name="PopupMenu.Style2" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_style2</item>
    </style>

    <style name="DropDownListView.Style2" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_style2</item>
    </style>

    <style name="ActionBarTabStyle.Style2" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_style2</item>
    </style>

    <style name="DropDownNav.Style2" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_style2</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_style2</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_style2</item>
    </style>

    <style name="ProgressBar.Style2" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_style2</item>
    </style>

    <style name="ActionButton.CloseMode.Style2" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_style2</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Style2.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Style2</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Style2</item>
    </style>

</resources>