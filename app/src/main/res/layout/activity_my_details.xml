<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.viral.omshiv.daytrackviralp.Settings"
    android:background="@drawable/back">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:background="#D9FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:id="@+id/textView21"
            android:textSize="@dimen/abc_action_bar_title_text_size"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:id="@+id/textView"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="75dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/editTextDateofBirth"
            android:layout_marginTop="65dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name :"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginTop="24dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/lastname"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignLeft="@+id/editTextDateofBirth"
            android:layout_alignStart="@+id/editTextDateofBirth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth :"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10"
            android:layout_marginTop="22dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignLeft="@+id/lastname"
            android:layout_alignStart="@+id/lastname"
            android:enabled="false"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender :"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
            android:layout_alignRight="@+id/textView11"
            android:layout_alignEnd="@+id/textView11"
            android:layout_marginTop="22dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/mygender"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_alignStart="@+id/editTextName" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:id="@+id/textView17"

            android:layout_below="@+id/mygender"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="31dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/myemail"
            android:layout_alignBottom="@+id/textView17"
            android:layout_alignStart="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name :"
            android:id="@+id/usernamet"
            android:layout_below="@+id/myemail"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginTop="19dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_alignBottom="@+id/usernamet"
            android:layout_alignLeft="@+id/myemail"
            android:layout_alignStart="@+id/myemail"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:id="@+id/textView20"
            android:layout_below="@+id/usernamet"
            android:layout_alignRight="@+id/textView17"
            android:layout_alignEnd="@+id/textView17"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText10"
            android:layout_below="@+id/username"
            android:layout_alignStart="@+id/username" />
    </RelativeLayout>


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Update Details"
        android:id="@+id/update"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />


</RelativeLayout>
