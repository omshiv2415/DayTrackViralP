<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".UserInput"
        android:id="@+id/viral"
        android:clickable="false"
        android:background="@drawable/back">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#A6FFFFFF">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="First Name"
            android:ems="12"
            android:id="@+id/Name"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:selectAllOnFocus="true"
            android:focusable="true"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:maxLength="30" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Date of Birth     DD/MM/YYYY"
            android:ems="12"
            android:id="@+id/DateofBirth"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/LastName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:editable="false"
            android:longClickable="true"
            android:inputType="date"
            android:textColor="@android:color/background_dark"
            android:maxLength="10" />

        <Button
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:text="Register"
            android:id="@+id/SignUpButton"
            android:background="@drawable/button"
            android:clickable="true"
            style="@android:style/ButtonBar"
            android:layout_marginTop="23dp"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:layout_below="@+id/Password"
            android:layout_centerHorizontal="true" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password (7 to 21 Character)"
            android:ems="12"
            android:id="@+id/Password"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPassword"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:selectAllOnFocus="false"
            android:textColor="@android:color/background_dark"
            android:textIsSelectable="false"
            android:maxLength="21"
            android:layout_below="@+id/CreateID"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@+id/CreateID"
            android:layout_alignEnd="@+id/CreateID"
            android:layout_alignLeft="@+id/EmailAddress"
            android:layout_alignStart="@+id/EmailAddress" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="abcd@yahoo.co.uk"
            android:ems="12"
            android:id="@+id/EmailAddress"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:selectAllOnFocus="true"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/background_dark"
            android:maxLength="36"
            android:layout_below="@+id/mygender"
            android:layout_alignLeft="@+id/DateofBirth"
            android:layout_alignStart="@+id/DateofBirth"
            android:layout_alignRight="@+id/mygender"
            android:layout_alignEnd="@+id/mygender" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Create ID "
            android:ems="12"
            android:id="@+id/CreateID"

            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/background_dark"
            android:maxLength="21"
            android:layout_below="@+id/EmailAddress"
            android:layout_alignRight="@+id/EmailAddress"
            android:layout_alignEnd="@+id/EmailAddress"
            android:layout_alignLeft="@+id/mygender"
            android:layout_alignStart="@+id/mygender" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:ems="12"
            android:id="@+id/LastName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_below="@+id/Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:selectAllOnFocus="true"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_dark"
            android:maxLength="30" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_dark"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account ?"
            android:id="@+id/AllReadyAccount"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/abc_action_bar_title_text_size"
            android:textColor="#ff1e690e"
            android:layout_below="@+id/SignUpButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DayTrackViralP"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/abc_action_bar_title_text_size" />

        <Spinner
            android:id="@+id/mygender"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:popupBackground="@color/wallet_holo_blue_light"
            android:spinnerMode="dialog"
            android:layout_below="@+id/DateofBirth"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"
            android:focusable="true"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_orange_light"
            style="@style/Widget.AppCompat.Base.DropDownItem.Spinner"
            >

            </Spinner>

        </RelativeLayout>

    </RelativeLayout>

