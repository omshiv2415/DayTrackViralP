<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.viral.omshiv.user.HomePage"
    android:id="@+id/viral"
    android:background="@drawable/back"
    android:visibility="visible">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="User Name"
        android:id="@+id/Email"
        style="@android:style/Animation.Toast"
        android:autoText="true"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="@android:color/background_dark"
        android:background="@drawable/username"
        android:textIsSelectable="false"

        android:paddingLeft="15dp"
        android:inputType="text"
        android:maxLength="@integer/restrictuser"
        android:focusable="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="New Password  "
        android:id="@+id/passwordLoginTextBox"
        style="@android:style/Animation.Toast"
        android:autoText="true"

        android:inputType="textPassword"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@android:color/background_dark"
        android:textSize="@dimen/activity_horizontal_margin"
        android:password="true"
        android:background="@drawable/username"
        android:textIsSelectable="false"
        android:paddingLeft="15dp"
        android:maxLength="@integer/password"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:id="@+id/update"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"

        android:layout_below="@+id/activitytime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <EditText
        style="@android:style/Animation.Toast"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="Retype New Password  "
        android:id="@+id/activitytime"
        android:autoText="true"
        android:inputType="textPassword"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@android:color/background_dark"
        android:textSize="@dimen/activity_horizontal_margin"
        android:password="true"
        android:background="@drawable/username"
        android:textIsSelectable="false"
        android:paddingLeft="15dp"
        android:maxLength="@integer/password"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/passwordLoginTextBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />


</RelativeLayout>
